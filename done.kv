Screen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDBoxLayout:
                    id: mainbox
                    orientation: 'vertical'
                    spacing: 10
                    padding: 0, 0, 0, 10
                    MDTopAppBar:
                        title: "Done"
                        elevation: 1
                        pos_hint: {"top": 0}
                        md_bg_color: "#add8e6"
                        specific_text_color: "#4a4939"
                        left_action_items:
                            [['menu', lambda x: nav_drawer.set_state("open")]]                    
                        right_action_items:
                            [
                            ["alpha-a-box-outline", lambda x: tasks_scroll_view.sort_by_priority(), "Sort by priority"],
                            ["animation-outline", lambda x: tasks_scroll_view.sort_by_tags(), "Sort by tags"],
                            ["file-cabinet", lambda x: tasks_scroll_view.sort_by_projects(), "Sort by projects"]
                            ]
                    TasksScrollView:
                        id: tasks_scroll_view
                        MDList:
                            id: mdlist
                    AddTaskButton:
                        id: add_task_button
                        icon: "plus"
                        icon_color: "black"
                        line_width: 1
                        line_color: "black"
                        pos_hint: {"center_x": .5, "center_y": .5}
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                orientation: 'vertical'
                MDLabel:
                    id: settingslabel
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: '20sp'
                    text:"Settings"
                    theme_text_color: "Custom"
                    text_color: "white"
                MDBoxLayout:
                    id: toggles
                    orientation: 'horizontal'
                    size_hint_y: None
                    size: toggledark.size
                    MyToggleButton:
                        id: toggledark
                        icon: 'weather-night'
                        size_hint_e: None
                        text: "Dark theme"
                        group: 'theme'
                    MyToggleButton:
                        id: togglelight
                        icon: 'weather-sunny'
                        size_hint_y: None
                        text: "Light theme"
                        group: 'theme'
                ScrollView:
                    MDList:
                        ChooseFileButton:
                            icon: 'file-settings'
                            theme_icon_color: "Custom"
                            icon_color: "black"
                            md_bg_color: "#add8e6"
                            text: "Choose file"
                            theme_text_color: "Custom"
                            text_color: "black"
