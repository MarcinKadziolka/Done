MDBoxLayout:
    orientation: 'vertical'
    spacing: 1
    SearchTextInput:
        id: search_text_input
        mode: "round"

        size_hint_y: self.default_size_hint_y
        size_hint_x: self.default_size_hint_x
        valign: 'center'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        hint_text: 'search'
        hint_text_color: 1,1,1,1
        icon_left: 'magnify'
        line_color: [1,1,1,1]
        color_normal: [1,1,1,1]

        font_size: .35 * self.height
        active_line: False
        multiline: False

    TasksScrollView:
        id: main
        MDList:
            id: mdlist

    AddTaskButton:
        id: add_task_button
        size_hint_x: 0.1
        size_hint_y: 0.1
        valign: 'center'
        halign: 'center'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        icon: 'plus'
        text: 'Add Task'


