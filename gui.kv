            icon: 'magnify'
            size_hint_y: 1
        SearchTextInput:
            id: Search_TextInput_id
            size_hint_y: 1
            pos_hint:{ 'left':0 , 'top': 1}
            hint_text: 'search'
            hint_text_color: 1,1,1,1
