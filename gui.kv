            mode: "fill"
            # line_color: [1,1,1,1] */
            # color_normal: [1,1,1,1] */

            font_size: .35 * self.height
            active_line: False
            multiline: False

        MDIconButton:
            icon: 'close'
            size_hint_y:1
            text_color: 0,0,0,1
    ScrollView:
        id: main
        MDList:
            id: mdlist
