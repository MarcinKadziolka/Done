Screen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                MDBoxLayout:
                    orientation: 'vertical'
                    spacing: 10
                    MDTopAppBar:
                        title: "Done"
                        elevation: 1
                        pos_hint: {"top": 0}
                        md_bg_color: "#add8e6"
                        specific_text_color: "#4a4939"
                        left_action_items:
                            [['menu', lambda x: nav_drawer.set_state("open")]]                    
                    SearchTextInput:
                        id: search_text_input
                        mode: "round"
                        size_hint_y: self.default_size_hint_y
                        size_hint_x: self.default_size_hint_x
                        valign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        hint_text: 'search'
                        hint_text_color_normal: 0,0,0,1
                        hint_text_color_focus: 0,0,0,1
                        icon_left: 'magnify'
                        icon_left_color_normal: 0,0,0,1
                        icon_left_color_focus: 0,0,0,1
                        text_color_normal: [0,0,0,1]
                        text_color_focus: [0,0,0,1]
                        font_size: .35 * self.height
                        active_line: False
                        multiline: False

                    TasksScrollView:
                        id: main
                        MDList:
                            id: mdlist

                    AddTaskButton:
                        id: add_task_button
                        size_hint_x: 0.1
                        size_hint_y: 0.1
                        valign: 'center'
                        halign: 'center'
                        pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                        icon: 'plus'
                        text: 'Add Task'
        MDNavigationDrawer:
            id: nav_drawer
            ContentNavigationDrawer:
                orientation: 'vertical'
                MDLabel:
                    id: settingslabel
                    size_hint_y: None
                    height: self.texture_size[1]
                    font_size: '20sp'
                    text:"Settings"
                    theme_text_color: "Custom"
                    text_color: "white"
                MDBoxLayout:
                    id: toggles
                    orientation: 'horizontal'
                    size_hint_y: None
                    size: toggledark.size
                    MyToggleButton:
                        id: toggledark
                        icon: 'weather-night'
                        size_hint_e: None
                        text: "Dark theme"
                        group: 'theme'
                    MyToggleButton:
                        id: togglelight
                        icon: 'weather-sunny'
                        size_hint_y: None
                        text: "Light theme"
                        group: 'theme'
                ScrollView:
                    MDList:
                        ChooseFileButton:
                            icon: 'file-settings'
                            theme_icon_color: "Custom"
                            icon_color: "black"
                            md_bg_color: "#add8e6"
                            text: "Choose file"
                            theme_text_color: "Custom"
                            text_color: "black"
